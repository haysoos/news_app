<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <ImageView
        android:id="@+id/home_view_holder_article_image"
        android:layout_width="match_parent"
        android:foreground="@drawable/gradient_black"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/home_view_holder_article_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/home_view_holder_article_image"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/home_view_holder_article_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/home_view_holder_article_source"
        android:visibility="gone"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/home_view_holder_article_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_view_holder_article_image"
        android:layout_marginTop="8dp"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/home_view_holder_article_published_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="12dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/home_view_holder_article_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="12dp"/>
</RelativeLayout>